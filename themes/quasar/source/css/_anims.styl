    margin-left 0
  10%
    margin-top 2px
    margin-left -1px
  20%
    margin-top -2px
    margin-left 2px
  30%
    margin-top 3px
    margin-left -2px
  40%
    margin-top 2px
    margin-left -1px
  50%
    margin-top -5px
    margin-left 2px
  60%
    margin-top 3px
    margin-left -2px
    margin-left 2px
  70%
    margin-top 3px
    margin-left -2px
  80%
    margin-top 5px
    margin-left -1px
  90%
    margin-top -2px
    margin-left 2px
  100%
