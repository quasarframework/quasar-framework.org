/* Credits for 'pulse' and 'tada' anims to animate.css */
/* https://github.com/daneden/animate.css */

.animated
  animation-duration 1s
  animation-fill-mode both

.animated.infinite
  animation-iteration-count infinite

@keyframes pulse
  from
    transform scale3d(1, 1, 1)
  50%
    transform scale3d(1.05, 1.05, 1.05)
  to
    transform scale3d(1, 1, 1)

.pulse
  animation-name pulse

@keyframes tada
  from
    transform scale3d(1, 1, 1)
  10%, 20%
    transform scale3d(.9, .9, .9) rotate3d(0, 0, 1, -3deg)
  30%, 50%, 70%, 90%
    transform scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, 3deg)
  40%, 60%, 80%
    transform scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, -3deg)
  to
    transform scale3d(1, 1, 1)

.tada
  animation-name tada

@keyframes swing
  15%
    transform translateX(5px)
  30%
    transform translateX(-5px)
  50%
    transform translateX(3px)
  65%
    transform translateX(-3px)
  80%
    transform translateX(2px)
  100%
    transform translateX(0)

.swing
  animation-name swing

@keyframes logo-resize
  0%, 25%
    width 35%
  35%, 50%
    width 25%
  60%, 75%
    width 15%
  85%, 90%
    width 10%

@keyframes device-fade-in-out
  0%
    opacity 0
  25%
    opacity 1
  35%
    opacity 0

@keyframes play-fade-out
  0%, 5%, 15%, 100%
    width 25%
    opacity 1
  10%
    width 30%
    opacity 1
  20%, 95%
    opacity 0

@keyframes laptop-fade-out
  0%, 15%
    left 50%
    opacity 0
  30%, 40%
    left 50%
    opacity 1
  45%, 100%
    left 0
    opacity 0

@keyframes qrcode-fade-in
  0%, 20%, 90%, 100%
    width 20%
    opacity 0
  35%, 45%
    width 20%
    opacity 1
  50%
    width 10%
    opacity 1
  55%
    width 10%
    opacity 0

@keyframes mobile-scan
  0%, 30%
    top 100%
    left 100%
    width 10%
    opacity 0
    transform translate(-50%, -50%) rotateZ(-45deg)
  40%, 65%
    width 30%
    top 50%
    left 50%
    opacity 1
    transform translate(-50%, -50%) rotateZ(0deg)
  70%, 100%
    width 30%
    opacity 0

@keyframes logo-fade-in
  0%, 50%
    width 5%
    height auto
    opacity 0
  55%, 70%
    width 20%
    height auto
    opacity 1
  90%
