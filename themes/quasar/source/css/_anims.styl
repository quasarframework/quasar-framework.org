    margin-left -1px

@keyframes needle-speed
  0%
    transform translate(-50%, -74%) rotateZ(95deg)
  20%
    transform translate(-50%, -74%) rotateZ(100deg)
  40%
    transform translate(-50%, -74%) rotateZ(95deg)
  60%
    transform translate(-50%, -74%) rotateZ(105deg)
  80%
    transform translate(-50%, -74%) rotateZ(95deg)
  100%
    transform translate(-50%, -74%) rotateZ(100deg)

@keyframes logo-slide-in-out
  0%
    left 80%
    opacity 0
    width 20%
  33%
    left 50%
    opacity 1
    width 50%
  66%, 100%
    left 20%
    opacity 0
    width 20%

@keyframes smoke
  0%, 33%, 100%
    opacity 0
    top 55%
  66%
    opacity 1
  99%
    opacity 0
    top 50%

