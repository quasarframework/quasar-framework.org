    transform translate(-50%, -50%) rotateY(0deg)
    opacity 1
  25%
    transform translate(-50%, -50%) rotateY(90deg)
    opacity 1
  26%
    opacity 0
  50%
    transform translate(-50%, -50%) rotateY(180deg)
    opacity 0
  75%
    transform translate(-50%, -50%) rotateY(-90deg)
    opacity 0
  100%
    transform translate(-50%, -50%) rotateY(0deg)
    opacity 1

@keyframes jslogo-rotate
  0%
    transform translate(-50%, -50%) rotateY(-180deg)
    opacity 0
  25%
    transform translate(-50%, -50%) rotateY(-90deg)
    opacity 0
  50%
    transform translate(-50%, -50%) rotateY(0deg)
    opacity 1
  75%
    transform translate(-50%, -50%) rotateY(90deg)
    opacity 1
  76%
    opacity 0
  100%
    transform translate(-50%, -50%) rotateY(180deg)
    opacity 0

